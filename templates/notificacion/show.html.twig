{% extends 'base.html.twig' %}

{% block title %}Notificacion{% endblock %}

{% block body %}
    <h1>Notificacion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notificacion.id }}</td>
            </tr>
            <tr>
                <th>Asunto</th>
                <td>{{ notificacion.asunto }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ notificacion.contenido }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ notificacion.fecha ? notificacion.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Alumno destinatario: </th>
                <td>{{ notificacion.getHijos().getNombre() }}</td>
            </tr>
            <tr>
                <th>Padre del Alumno: </th>
                <td>{{ notificacion.getHijos().getUser().getNombre() }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('app_notificacion_index') }}">Volver a la lista</a>

    <a class="btn btn-success" href="{{ path('app_notificacion_edit', {'id': notificacion.id}) }}">Editar</a>

    {{ include('notificacion/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
