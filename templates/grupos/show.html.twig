{% extends 'base.html.twig' %}

{% block title %}Grupos{% endblock %}

{% block body %}

    <h1>Grupos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grupo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ grupo.nombre }}</td>
            </tr>
        </tbody>
    </table>
    
    <table class="table">
    <h2>Alumnos</h2>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Fecha Nacimiento</th>
        </tr>
        {% for item in alumnos %}
            <tr>
                <td> {{ item.getNombre() }} </td>
                <td> {{ item.getApellidos() }} </td>
                <td> {{ item.getFechaNacimiento()|date('d-m-Y') }} </td>
            </tr>
        {% endfor %}
    </table>
    <a class="btn btn-primary" href="{{ path('app_grupos_index') }}">Volver a la lista</a>

    <a class="btn btn-success" href="{{ path('app_grupos_edit', {'id': grupo.id}) }}">Editar</a>

    {{ include('grupos/_delete_form.html.twig') }}
{% endblock %}
